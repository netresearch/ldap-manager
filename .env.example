# LDAP Manager Development Environment Configuration
# Copy this file to .env and modify values as needed

# LDAP Server Configuration
LDAP_HOST=localhost
LDAP_PORT=389
LDAP_BASE_DN=dc=netresearch,dc=local
LDAP_BIND_DN=cn=admin,dc=netresearch,dc=local
LDAP_BIND_PASSWORD=admin
LDAP_USE_TLS=false

# Session Configuration (BBolt-based)
SESSION_PATH=./session.bbolt
SESSION_SECRET=change-this-in-production-to-something-secure

# Application Configuration
PORT=3000
LOG_LEVEL=debug
ENVIRONMENT=development

# Development Features
PERSIST_SESSIONS=true
HEALTH_CHECK_ENABLED=true