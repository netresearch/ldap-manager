# EditorConfig for LDAP Manager
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{js,ts,tsx,jsx}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.{html,templ}]
indent_size = 2

[*.sh]
indent_size = 2

[*.{toml,ini}]
indent_size = 2
